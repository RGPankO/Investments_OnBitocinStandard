{
  "name": "measured-in-bitcoin",
  "version": "1.0.0",
  "description": "Educational platform demonstrating Bitcoin as a unit of account and deflationary monetary perspective",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "build": "npx prisma generate && echo 'Build complete'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "setup-db": "node scripts/setup-database.js",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:migrate": "npx prisma migrate dev",
    "db:studio": "npx prisma studio",
    "db:reset": "npx prisma migrate reset",
    "db:introspect": "npx prisma db pull"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "canvas": "^3.2.0",
    "chart.js": "^4.5.0",
    "chartjs-node-canvas": "^5.0.0",
    "chartjs-plugin-datalabels": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "prisma": "^6.16.2"
  },
  "devDependencies": {
    "@playwright/mcp": "^0.0.39",
    "@playwright/test": "^1.55.0",
    "nodemon": "^3.0.1",
    "playwright": "^1.55.0"
  }
}
