{
  "name": "bitcoin-investment-game",
  "version": "1.0.0",
  "description": "Investment game where everything is measured in Bitcoin/satoshis",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "build": "npx prisma generate && echo 'Build complete'",
    "setup-db": "node scripts/setup-database.js",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:migrate": "npx prisma migrate dev",
    "db:studio": "npx prisma studio",
    "db:reset": "npx prisma migrate reset",
    "db:introspect": "npx prisma db pull"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "canvas": "^3.2.0",
    "chart.js": "^4.5.0",
    "chartjs-node-canvas": "^5.0.0",
    "chartjs-plugin-datalabels": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "prisma": "^6.16.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
